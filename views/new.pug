extends layout

block content
  h2 Create a New Contact

  form(action="/contacts/new" method="post")
    fieldset 
      dl
        dt 
          label(for="firstName") First Name:
        dd 
          input#firstName(type="text" name="firstName" value=firstName)
      dl 
        dt 
          label(for="lastName") Last Name:
        dd 
          input#lastName(type="text" name="lastName" value=lastName)
      dl
        dt 
          label(for="phoneNumber") Phone Number: 
        dd 
          input#phoneNumber(type="text" 
                            name="phoneNumber" 
                            placeholder="###-###-####" 
                            value=phoneNumber)
    
    fieldset
      input(type="submit" name="submit" value="Save")
      button.cancel(formaction="/contacts" formmethod="get") Cancel

      
